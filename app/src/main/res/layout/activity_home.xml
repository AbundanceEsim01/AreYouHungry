<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolBar"
            layout="@layout/toolbar_layout" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolBar"
            android:text="@string/welcome_to_the_recipe_app"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/homepage_img"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_below="@id/welcomeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/homepage2_img" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homepage_img"
            android:text="@string/first_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText"
            android:hint="@string/input_name_here"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/signIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="@string/sign_in" />

        <Button
            android:id="@+id/goToSearch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signIn"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="@string/search_recipe" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goToSearch" />

        <include layout="@layout/navigation_layout"
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>